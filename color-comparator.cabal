        base ^>=4.14.3.0,
        aeson ^>=1.5.6.0,
        bytestring ^>=0.10.12.0,
        containers ^>=0.6.5.1,
    other-modules:
        Colors
        Comparators
        ResultBuilder
    hs-source-dirs:
        src
    default-language: Haskell2010
